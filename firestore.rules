rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection - Strict ownership
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Medicines subcollection
      match /medicines/{medicineId} {
        allow read, write: if isOwner(userId);
      }
      
      // Health Checks subcollection
      match /health_checks/{checkId} {
        allow read, write: if isOwner(userId);
      }
      
      // Fitness Reminders subcollection
      match /fitness_reminders/{reminderId} {
        allow read, write: if isOwner(userId);
      }
      
      // Water Intake subcollection
      match /water_intake/{dateId} {
        allow read, write: if isOwner(userId);
      }

      // Period Data subcollection
      match /period/{docId} {
        allow read, write: if isOwner(userId);
      }
      
      // Water Reminders subcollection
      match /water_reminders/{docId} {
        allow read, write: if isOwner(userId);
      }
      
      // Period Reminders subcollection
      match /period_reminders/{docId} {
        allow read, write: if isOwner(userId);
      }
      
      // Action Logs subcollection
      match /action_logs/{logId} {
        allow read, write: if isOwner(userId);
      }
      
      // User Settings subcollection
      match /user_settings/{settingId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Deny access to all other documents by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
